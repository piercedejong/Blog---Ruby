

    <div class="col-sm-10">
      <h4><small>RECENT POSTS</small></h4>
      <% @articles.reverse.each do |article| %>
        <hr>
        <h2><a href = "<%= article_path(article) %>"><%= article.title %></a></h2>
        <h4><%= article.about %></h4>
        <h5><span class="glyphicon glyphicon-time"></span> Post by Pierce de Jong, <%=article.created_at.strftime("%B %d, %Y")%></h5>
        <h5>
          <% if current_user %>
            <%= link_to 'Edit', edit_article_path(article) %>
            <%= link_to 'Delete', article_path(article), method: :delete,data: {confirm: "Are you sure?"} %>
          <% end %>
          <span class="label label-danger">Tag</span> <span class="label label-primary">Tag</span>
        </h5>
        <hr>
      <% end %>
    </div>
